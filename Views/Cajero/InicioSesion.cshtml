@model LoginTarjetaViewModel

@{
    ViewData["Title"] = "Autenticación con Tarjeta";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center"><i class="fas fa-credit-card"></i> Autenticación Requerida</h3>
                </div>
                <div class="card-body">
                    <form asp-action="InicioSesion" method="post">
                        <input type="hidden" asp-for="CajeroId" />

                        <div class="form-group mb-3">
                            <label asp-for="NumeroTarjeta" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                <input asp-for="NumeroTarjeta" class="form-control"
                                    placeholder="Ingrese su número de tarjeta" />
                            </div>
                            <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Pin" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Pin" type="password" class="form-control"
                                    placeholder="Ingrese su PIN" />
                            </div>
                            <span asp-validation-for="Pin" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt"></i> Ingresar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}