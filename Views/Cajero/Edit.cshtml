@model backenddb_c.Models.Cajero

@{
    ViewData["Title"] = "Editar Cajero";
}

<h1 class="mb-4">Editar Cajero</h1>

<div class="card shadow-sm rounded">
    <div class="card-body">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="CodigoCajero" />

            <div class="mb-3">
                <label asp-for="Ubicacion" class="form-label fw-bold"></label>
                <input asp-for="Ubicacion" class="form-control" placeholder="Ingrese la ubicaciÃ³n" />
                <span asp-validation-for="Ubicacion" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Saldo" class="form-label fw-bold"></label>
                <input asp-for="Saldo" class="form-control" placeholder="Ingrese el saldo actual" />
                <span asp-validation-for="Saldo" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
